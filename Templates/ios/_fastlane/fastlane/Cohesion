
COHERENT_SPEC] = PROJECT_PARAMS[:COHERENT_SPEC]

desc 'Measure and report cohesion'
lane :run_cohesion do
  begin
    executable = sh "which coherent-swift"
    puts "Found 'coherent-swift' at: "+executable

    sh "#{executable} report -s #{COHERENT_SPEC]}"
  rescue
    puts "Skipping step - Couldn't find 'coherent-swift'"
  end
end
