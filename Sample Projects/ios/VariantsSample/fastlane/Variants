VARIANTS_SPEC = PROJECT_PARAMS[:VARIANTS_SPEC]

# --- Variants

desc 'switch variants'
lane :switch_variant do |options|
    variant = options[:variant] || 'default'
    begin
        sh "`which variants` switch ios #{variant} -s #{VARIANTS_SPEC}"
    rescue
        UI.user_error!("'variants' not installed or variant #{variant} not found in your configuration")
    end
end
